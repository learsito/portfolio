@page "/Projects"
@using MainElements
@using ProjectsPages

@foreach (var project in projects) {
    <ProjectArticle Id=@project.Id Title=@project.Title Image=@project.Image Description=@project.Description Href=@project.Href NewTab=@project.NewTab />
}


    
@code {
    List<ProjectsBase> projects = new();

    protected override void OnInitialized() {
        projects.AddRange(new List<ProjectsBase>
            {
                new ProjectsBase { Id="Portfolio", Title = "Portfolio", Image="PortfolioPage.png", Description="This page. You can check out the code at my GitHub page.", Href="https://github.com/learsito/portfolio", NewTab=true }
            });
    }
}

